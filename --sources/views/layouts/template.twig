<!DOCTYPE html>
<html class="no-js" lang="en">
<head>

    <!-- Meta -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">
    <meta name="description" content="">

    <!-- Title -->
    <title>{{ template.title }}</title>

    <!-- Styles -->
    <link rel="stylesheet" href="{{ 'css/app.min.css' | asset }}">

    <!-- Modernizr -->
    <script src="{{ 'js/modernizr.min.js' | asset }}"></script>

    <!-- jQuery -->
    <script src="{{ 'js/jquery.min.js' | asset }}"></script>

</head>
<body id="csstyle">

    <!-- Main content (injected from views) -->
    <main>
        {% block content %}{% endblock %}
    </main>
    
    <!-- Application scripts -->
    <script src="{{ 'js/app.min.js' | asset }}"></script>

</body>
</html>